UXTerm.termName: xterm-256color
UXTerm.vt100.locale: false
UXTerm.vt100.utf8: true
UXterm.vt100.metaSendsEscape: true
UXTerm.vt100.saveLines: 4096
UXTerm.vt100.faceName: Comic Code:size=13:antialias=true
UXTerm.vt100.scaleHeight: 1.2
UXterm.vt100.boldColors: false
UXTerm.vt100.backarrowKey: false
UXTerm.vt100.selectToClipboard: true
UXTerm.ttyModes: erase ^?
UXTerm*visualBell: false
UXTerm*fullscreen: never
UXTerm*internalBorder: 5

!copying
UXTerm.vt100.translations: #override \n\
	<Btn1Up>: select-end(PRIMARY, CLIPBOARD, CUT_BUFFER0) \n\
	Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
	Ctrl Shift <Key>V: insert-selection(CLIPBOARD)

!same for the fzf-menu
fzfmenu.vt100.utf8: true
fzfmenu.vt100.faceName: Fantasque Sans Mono:size=14:antialias=true
fzfmenu.vt100.boldColors: false

